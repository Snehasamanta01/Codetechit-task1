class Book:
    def __init__(self, title, author, publication_year, status="Available"):
        self.title = title
        self.author = author
        self.publication_year = publication_year
        self.status = status

    def __str__(self):
        return f"{self.title} by {self.author}, published in {self.publication_year}. Status: {self.status}"

class Library:
    def __init__(self):
        self.books = {}

    def add_book(self, book):
        self.books[book.title] = book
        print(f"Book '{book.title}' added to the library.")

    def remove_book(self, title):
        if title in self.books:
            del self.books[title]
            print(f"Book '{title}' removed from the library.")
        else:
            print(f"Book '{title}' not found in the library.")

    def borrow_book(self, title):
        if title in self.books:
            book = self.books[title]
            if book.status == "Available":
                book.status = "Borrowed"
                print(f"Book '{title}' borrowed.")
            else:
                print(f"Book '{title}' is currently not available.")
        else:
            print(f"Book '{title}' not found in the library.")

    def return_book(self, title):
        if title in self.books:
            book = self.books[title]
            if book.status == "Borrowed":
                book.status = "Available"
                print(f"Book '{title}' returned.")
            else:
                print(f"Book '{title}' is already available.")
        else:
            print(f"Book '{title}' not found in the library.")

    def display_books(self):
        for book in self.books.values():
            print(book)

def main():
    library = Library()

    while True:
        print("\nLibrary Management System")
        print("1. Add book")
        print("2. Remove book")
        print("3. Borrow book")
        print("4. Return book")
        print("5. Display books")
        print("6. Exit")

        option = input("Enter option: ")

        if option == '1':
            title = input("Enter book title: ")
            author = input("Enter book author: ")
            publication_year = input("Enter book publication year: ")
            book = Book(title, author, publication_year)
            library.add_book(book)
        elif option == '2':
            title = input("Enter book title: ")
            library.remove_book(title)
        elif option == '3':
            title = input("Enter book title: ")
            library.borrow_book(title)
        elif option == '4':
            title = input("Enter book title: ")
            library.return_book(title)
        elif option == '5':
            library.display_books()
        elif option == '6':
            break
        else:
            print("Invalid option. Please try again.")

if __name__ == "__main__":
    main()
